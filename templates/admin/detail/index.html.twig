{% extends 'base.html.twig' %}

{% block title %}Detail index{% endblock %}

{% block body %}
    <h1>Detail index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>ImageFileName</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Tarif</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for detail in details %}
            <tr>
                <td>{{ detail.id }}</td>
                <td>{{ detail.imageFileName }}</td>
                <td>{{ detail.titre }}</td>
                <td>{{ detail.description }}</td>
                <td>{{ detail.tarif }}</td>
                <td>
                    <a href="{{ path('app_detail_show', {'id': detail.id}) }}">show</a>
                    <a href="{{ path('app_detail_edit', {'id': detail.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_detail_new') }}">Create new</a>
{% endblock %}
